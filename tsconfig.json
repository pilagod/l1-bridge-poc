{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@abi/*": ["abi/*"],
      "@deployments/*": ["deployments/*"],
      "@network/*": ["network/*"],
      "@typechain": ["typechain"],
      "@util/*": ["util/*"]
    }
  },
  "include": ["*.ts", "artifacts", "deploy", "network", "util", "worker"],
  "exclude": ["node_modules"]
}
